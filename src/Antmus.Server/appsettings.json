{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": false,
        "TimestampFormat": "HH:mm:ss ",
        "UseUtcTimestamp": true
      }
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": "http://localhost:5000", /* list of origins split by ';' (without whitespace) */
  "Mode": "Mock", /* Recorder, Mock */
  "Redirect": "http://localhost:5000",
  "RequestHeaders": [],
  "ResponseHeaders": [],
  "Mocks": {
    "Path": "mocks"
  }
}